<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Description</th>
      <th>Assigned Contact</th>
      <th>Employee</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model.tasks as |task|}}
      <tr>
        <td>{{#link-to 's.vendors.vendor.tasks.task' task}}{{task.name}}{{/link-to}}</td>
        <td>{{task.dueDate}}</td>
        <td>{{task.description}}</td>
        <td>{{task.assignedTo.fullName}}</td>
        <td>{{task.employee.fullName}}</td>
        <td><button type="button" class="btn btn-danger" {{action 'deleteTask' task}}>Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
  <tr>
    <th></th>
    <td></td>
  </tr>
</table>
{{outlet}}
