<div class="container">
	<div class="page-header">
        <h2>Create Task</h2>
    </div>
	<form {{action 'createEmployee' on='submit'}}>
			<div class="form-group">
				<select {{action 'selectVendor' on='change'}}>
				{{#each tasks as |task|}}
					<option>{{task.name}}</option>
					{{/each}}
				</select>
			</div>
			<div class="form-group">
	        <label for="title">First Name</label>
	        {{input type="text" id="title" value=title class='form-control' autofocus=true}}
	    </div>
        <div class="form-group">
	        <label for="date">Last Name</label>
            {{date-picker id="date" autoclose=true valueFormat="" date=eventDate format="MM-DD-YYYY" allowBlank=true  placeholder="Enter event date"}}&nbsp;<span {{action "clearDate"}} class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
	    </div>
		<div class="form-group">
	        <label for="address">Address</label>
	        {{input type="text" id="address" value=address class='form-control' autofocus=true}}
	    </div>
	    <div class="form-group">
	        <label for="description">Description</label>
	        {{textarea value=description id="description" class='form-control'}}
	    </div>
	    <button class="btn btn-default" {{action 'createEmployee' model}}>Create Employee</button>
	</form>
</div>
