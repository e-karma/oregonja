{{#if isShowingTaskSuccess}}
<p class="bg-success">Task was successfully created.</p>
{{/if}}
<fieldset>
<form class="task-form form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.name}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="stage">Description:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.description}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="estAmt">Due Date:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.dueDate}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="estClose">Assigned to:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.assignedTo.fullName}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="estClose">Employee:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.employee.fullName}}
      </span>
    </div>
  </div>

  <div class="form-group">
    {{#link-to 's.vendors.vendor.tasks.index' class="btn btn-primary"}}Back to all{{/link-to}} {{#link-to 's.vendors.vendor.tasks.create' class="btn btn-primary"}}Create new Task{{/link-to}}
  </div>
</form>
</fieldset>
