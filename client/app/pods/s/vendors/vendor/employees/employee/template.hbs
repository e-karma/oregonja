{{#if isShowingEmployeeSuccess}}
<p class="bg-success">Employee was successfully created.</p>
{{/if}}
<fieldset>
<form class="employee-form form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Full Name:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.fullName}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="email">Email:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.email}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="title">Title:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.title}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="role">Role:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.role}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="phone">Phone:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.phone}}
      </span>
    </div>
  </div>
  <div class="form-group">
    {{#link-to 's.vendors.vendor.employees.index' class="btn btn-primary"}}Back to all{{/link-to}} {{#link-to 's.vendors.vendor.employees.create' class="btn btn-primary"}}Create new Employee{{/link-to}}
  </div>
</form>
</fieldset>
