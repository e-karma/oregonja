<div class="container">
	<div class="page-header">
    <h2>Create Opportunity</h2>
  </div>

	<form class="form-horizontal" {{action 'createOpportunity' on='submit'}}>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="title">Title:</label>
			<div class="col-sm-10">
				{{input type="text" id="title" value=title class='form-control' placeholder="Enter Title"}}
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="stage">Stage:</label>
			<div class="col-sm-10">
				<select id="stage">
					{{#each stages as |stage|}}
						<option {{action 'selectStage' stage}}>{{stage}}</option>
					{{/each}}
				</select>
			</div>
		</div>
			<div class="form-group">
				<label for="date">Estimated Close:</label>
					{{date-picker id="date" autoclose=true valueFormat="" date=estClose format="MM-DD-YYYY" allowBlank=true placeholder="Estimated Close"}}&nbsp;<span {{action "clearDate"}} class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="estAmt">Estimated Amount:</label>
				<div class="col-sm-10">
					{{input type="text" id='estAmt' value=estAmt placeholder='Enter Estimated Amount' class='form-control' }}
				</div>
			</div>
			{{#link-to 's.vendors.vendor.opportunities.index' class="btn btn-default"}}Back to all{{/link-to}}
	    <button type="submit" class="btn btn-primary">Create Opportunity</button>
	</form>
</div>
