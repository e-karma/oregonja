<div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default">Hopper</button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default">Main</button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default">Contacts</button>
  </div>
</div>
<div class="">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>From</th>
        <th>Subject</th>
        <th>To</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |email|}}
      <tr>
        <td>{{email.from}}</td>
        <td>{{email.title}}</td>
        <td>{{email.to}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
