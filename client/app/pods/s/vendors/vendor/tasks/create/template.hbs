<div class="container">
	<div class="page-header">
    <h2>Create Task</h2>
  </div>

	<form class="form-horizontal" {{action 'createTask' on='submit'}}>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="stage">Assigned to:</label>
			<div class="col-sm-10">
				<select id="user">
					<option>Select a user</option>
					{{#each users as |user|}}
						<option {{action 'selectUser' user}}>{{user.fullName}}</option>
					{{/each}}
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="name">Name:</label>
			<div class="col-sm-10">
				{{input type="text" id="name" value=name class='form-control' placeholder="Enter Name"}}
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="description">Description:</label>
			<div class="col-sm-10">
				{{textarea id="description" value=description class='form-control' placehoder="Enter Task Description"}}
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="employee">Employee:</label>
			<div class="col-sm-10">
				<select id="employee">
					<option>Select an employee</option>
					{{#each model.employees as |employee|}}
						<option {{action 'selectEmployee' employee}}>{{employee.fullName}}</option>
					{{/each}}
				</select>
			</div>
		</div>
			<div class="form-group">
				<label for="date">Due Date:</label>
					{{date-picker id="dueDate" autoclose=true valueFormat="" date=dueDate format="MM-DD-YYYY" allowBlank=true placeholder="Estimated Close"}}&nbsp;<span {{action "clearDate"}} class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
			</div>
			{{#link-to 's.vendors.vendor.tasks.index' class="btn btn-default"}}Back to all{{/link-to}}
	    <button type="submit" class="btn btn-primary">Create Task</button>
	</form>
</div>
