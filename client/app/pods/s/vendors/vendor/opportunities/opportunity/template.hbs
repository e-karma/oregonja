{{#if isShowingOpportunitySuccess}}
<p class="bg-success">Opportunity was successfully created.</p>
{{/if}}
<fieldset>
<form class="opportunity-form form-horizontal" {{action 'saveOpportunity' on="submit"}}>
  <div class="form-group">
    <label class="col-sm-2 control-label">Title:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.title}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="stage">Stage: <span class="glyphicon glyphicon-pencil" aria-hidden="true" {{action 'changeStage'}}></span></label>
    <div class="col-sm-10">
      {{#if isChangingStage}}
        <select id="stage">
          <option>Select a stage</option>
          {{#each stages as |stage|}}
            <option {{action 'selectStage' stage}}>{{stage}}</option>
          {{/each}}
        </select>
      {{else}}
        <span class="form-control">
          {{model.stage}}
        </span>
      {{/if}}

    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="estAmt">Estimated Amount:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.formattedEstAmt}}
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="estClose">Estimated Close:</label>
    <div class="col-sm-10">
      <span class="form-control">
        {{model.estClose}}
      </span>
    </div>
  </div>

  <div class="form-group">
    {{#link-to 's.vendors.vendor.opportunities.index' class="btn btn-default"}}Back to all{{/link-to}} <button type="submit" class="btn btn-primary">Save</button>
  </div>
</form>
</fieldset>
