<fieldset>
<form class="email-form form-horizontal" {{action 'sendEmail' on='submit'}}>
  <div class="form-group">
    <label class="col-sm-2 control-label">From:</label>
    <div class="col-sm-10">
      <span class="form-control">
        <strong>{{model.fullName}}</strong> ({{model.email}})
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="toEmail">To:</label>
    <div class="col-sm-10">
    {{input class="form-control" type="email" value=toEmail}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="emailSubject">Subject:</label>
    <div class="col-sm-10">
    {{input class="form-control" type="text" value=emailSubject}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="emailSubject">Small Description:</label>
    <div class="col-sm-10">
    {{input class="form-control" type="text" value=emailDesc}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="bodyEmail">Message:</label>
    <div class="col-sm-10">
    {{textarea rows="4" class="form-control" placeholder="The message to send..." value=bodyEmail}}
    </div>
  </div>
  <div class="form-group">
    {{#link-to 's.emails.index' class="btn btn-primary"}}Back to all{{/link-to}}
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
</fieldset>
