{{outlet}}
	<form class="post-form" {{action 'createPitch' on='submit'}}>
	    <div class="form-group post-banner">
	      	<div class="col-sm-4 col-sm-offset-4">
						{{input type="text" value=model.title class='form-control form-control-light' placeholder="Your Todo Title Goes Here"}}
	      	</div>
	    </div>
	    <div class="form-group">
	        {{textarea value=model.body class='form-control' placeholder="What needs to be done?"}}
	    </div>
			<div class="col-sm-offset-5">
				<button class="btn rb-btn-info" {{action 'createPitch' model}}>Create Pitch</button>
			</div>
	</form>
