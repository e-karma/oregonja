<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Stage</th>
      <th>Estimated Amount</th>
      <th>Estimated Close</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |opportunity|}}
    <tr>
      <td>{{#link-to 's.vendors.vendor.opportunities.opportunity' opportunity}}{{opportunity.title}}{{/link-to}}</td>
      <td>{{opportunity.stage}}</td>
      <td>{{opportunity.formattedEstAmt}}</td>
      <td>{{opportunity.estClose}}</td>
      <td><button type="button" class="btn btn-danger" {{action 'deleteOpportunity' opportunity}}>Delete</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
